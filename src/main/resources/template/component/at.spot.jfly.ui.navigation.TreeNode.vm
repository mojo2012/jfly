<template v-if="${_state}.nodeType == 'DEFAULT'">
	<v-list-group v-if="${_state}.hasChildren"
		uuid="${_uuid}"
		:class="${_state}.styleClasses" $!events
		v-model="${_state}.isExpanded"
		:key="${_state}.title"
		:prepend-icon="componentStates['$!{component.icon.uuid}'].icon"
		>
		
		<v-list-tile slot="activator" class="list-hotfix">
			<v-list-tile-content>
				<v-list-tile-title :title="${_state}.title">{{${_state}.title}}</v-list-tile-title>
				<v-list-tile-sub-title :title="${_state}.subTitle">{{${_state}.subTitle}}</v-list-tile-sub-title>
			</v-list-tile-content>
		</v-list-tile>
	
		<v-list
			uuid="${_uuid}" 
			:class="${_state}.styleClasses" 
			>
			#foreach( $!child in $!component.children )
				$!child.render()
			#end
		</v-list>
		
	</v-list-group>
		
	<v-list-tile v-if="!${_state}.hasChildren" >
		<v-list-tile-action>
			$!{component.icon.render()}
		</v-list-tile-action>
		<v-list-tile-content>
			<v-list-tile-title :title="${_state}.title">
				{{${_state}.title}}
				<v-badge color="blue">
					{{${_state}.badge}}
				</v-badge>
			</v-list-tile-title>
			<v-list-tile-sub-title :title="${_state}.subTitle" v-if="${_state}.subTitle">
				{{${_state}.subTitle}}
			</v-list-tile-sub-title>
		</v-list-tile-content>
	</v-list-tile>
</template>

<template v-else-if="${_state}.nodeType == 'SPLITTER'">
	<v-divider></v-divider>
</template>

<template v-else-if="${_state}.nodeType == 'SUB_HEADER'">
	<v-subheader :title="${_state}.title" >{{${_state}.title}}</v-subheader>
</template>